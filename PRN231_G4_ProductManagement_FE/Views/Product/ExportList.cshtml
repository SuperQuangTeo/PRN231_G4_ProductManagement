@model List<Export>
@{
}
<form method="get" action="/Product/ExportList">
    <span>
        <input type="date" name="fromDate" />
        <input type="date" name="toDate" />
    </span>
    <input type="submit" value="Search" />
</form>


<table class="table">
    <thead>
        <tr>
            <th scope="col">Product Name</th>
            <th scope="col">Supplier</th>
            <th scope="col">Category</th>
            <th scope="col">Export Price</th>
            <th scope="col">Export Quantity</th>
            <th scope="col">Export Date</th>
            <th scope="col">Store Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in @Model)
        {
            <tr>
                <td>@(p.Product != null ? p.Product.ProductName : "nothing")</td>
                <td>@(p.Product != null && p.Product.Supplier != null ? p.Product.Supplier.SupplierName : "nothing")</td>
                <td>@(p.Product != null && p.Product.Category != null ? p.Product.Category.CategoryType : "nothing")</td>
                <td>@p.ExportPrice</td>
                <td>@p.ExportQuantity</td>
                <td>@p.ExportDate</td>
                <td>@(p.Store != null ? p.Store.StoreName : "nothing")</td>
            </tr>
        }
    </tbody>
</table>

<span>
    <a href="/Product/ExportList?fromDate=@ViewData["fromDate"]&toDate=@ViewData["toDate"]&pageIndex=@ViewData["pre"]">pre</a>
    <a href="/Product/ExportList?fromDate=@ViewData["fromDate"]&toDate=@ViewData["toDate"]&pageIndex=@ViewData["next"]">next</a>
</span>