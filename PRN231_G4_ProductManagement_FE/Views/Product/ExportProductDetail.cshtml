@model Product
@{
}
<form asp-controller="Product" asp-action="DoExportProduct">
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input type="text" readonly class="form-control-plaintext" name="exportProduct.ProductId" value="@Model.Id">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Product Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" readonly name="" value="@Model.ProductName">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Quantity</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" name="exportProduct.ExportQuantity" min="1" value="1">
        </div>
    </div>
    <div class="mb-3 row">
        <label class="col-sm-2 col-form-label">Price</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" readonly name="exportProduct.ExportPrice" min="1" value="@Model.ProfitMoney">
        </div>
    </div>

    <select class="form-select" name="exportProduct.StoreId">
        @foreach (Store s in ViewBag.Stores)
        {
            <option value="@s.Id">@s.StoreName</option>
        }
    </select>

    <input type="submit" value="Export Product" />
</form>